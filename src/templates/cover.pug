doctype xml
doctype 1.1
html(xmlns='http://www.w3.org/1999/xhtml' xml:lang='en')
  head
    title= TITLE
    if coverType === "image"
      style(type='text/css').
        body { margin: 0; padding: 0; text-align: center; }
        .cover { margin: 0; padding: 0; font-size: 1px; }
        img { margin: 0; padding: 0; height: 100%; }
  body
    if coverType === "image"
      div(class='cover')
        img(style='height: 100%;width: 100%;' src=`images/${coverFilename}` alt='Cover')
    else
      div!= coverText
